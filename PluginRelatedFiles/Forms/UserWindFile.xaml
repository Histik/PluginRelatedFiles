<Window x:Class="PluginRelatedFiles.Forms.UserWindFile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PluginRelatedFiles.Forms"
             mc:Ignorable="d"
             Height="400" Width="400"
             d:DesignHeight="400" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="17px"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40px"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="Hello" Grid.Row="0" Text="Чтобы экспортировать связанные файлы нажмите 'Начать экспорт'" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <ListBox x:Name="FileListView" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <Button x:Name="StartExportToFile" Content="Начать экспорт (*xlsx)" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Stretch" Click="ToFileExportExcel"/>
    </Grid>
</Window>
